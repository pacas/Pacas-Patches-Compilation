<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Biotech</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Mech Master Helmet -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="AM_MechCommanderHelm"]/statBases</xpath>
                    <value>
                        <statBases>
                            <Bulk>5</Bulk>
                            <WornBulk>1</WornBulk>
                            <MaxHitPoints>300</MaxHitPoints>
                            <WorkToMake>25000</WorkToMake>
                            <Mass>41.5</Mass>
                            <Flammability>0</Flammability>
                            <ArmorRating_Sharp>13</ArmorRating_Sharp>
                            <ArmorRating_Blunt>34</ArmorRating_Blunt>
                            <StuffEffectMultiplierArmor>7.3</StuffEffectMultiplierArmor>
                            <ArmorRating_Heat>0.54</ArmorRating_Heat>
                            <Insulation_Cold>4</Insulation_Cold>
                            <Insulation_Heat>2</Insulation_Heat>
                            <EquipDelay>4</EquipDelay>
                        </statBases>
                    </value>
                </li>
                <!-- Mech Breaker Helmet -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="AM_MechBreakerHelm"]/statBases</xpath>
                    <value>
                        <statBases>
                            <Bulk>6</Bulk>
                            <WornBulk>2</WornBulk>
                            <MaxHitPoints>300</MaxHitPoints>
                            <WorkToMake>35250</WorkToMake>
                            <Mass>6</Mass>
                            <Flammability>0.4</Flammability>
                            <ArmorRating_Sharp>15</ArmorRating_Sharp>
                            <ArmorRating_Blunt>37</ArmorRating_Blunt>
                            <StuffEffectMultiplierArmor>7.3</StuffEffectMultiplierArmor>
                            <ArmorRating_Heat>0.48</ArmorRating_Heat>
                            <Insulation_Cold>4</Insulation_Cold>
                            <Insulation_Heat>2</Insulation_Heat>
                            <EquipDelay>6</EquipDelay>
                        </statBases>
                    </value>
                </li>
                <!-- Mech Master Armor -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="AM_MechCommanderSuit"]/statBases</xpath>
                    <value>
                        <statBases>
                            <Bulk>100</Bulk>
                            <WornBulk>15</WornBulk>
                            <Mass>15</Mass>
                            <Flammability>0.4</Flammability>
                            <ArmorRating_Sharp>20.5</ArmorRating_Sharp>
                            <ArmorRating_Blunt>41</ArmorRating_Blunt>
                            <ArmorRating_Heat>0.65</ArmorRating_Heat>
                            <StuffEffectMultiplierArmor>7.3</StuffEffectMultiplierArmor>
                            <Insulation_Cold>38</Insulation_Cold>
                            <Insulation_Heat>16</Insulation_Heat>
                            <EquipDelay>14</EquipDelay>
                        </statBases>
                    </value>
                </li>
                <!-- Mech Breaker Armor -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="AM_MechBreakerArmor"]/statBases</xpath>
                    <value>
                        <statBases>
                            <Bulk>100</Bulk>
                            <WornBulk>20</WornBulk>
                            <Mass>20</Mass>
                            <Flammability>0.4</Flammability>
                            <ArmorRating_Sharp>24.5</ArmorRating_Sharp>
                            <ArmorRating_Blunt>52</ArmorRating_Blunt>
                            <StuffEffectMultiplierArmor>7.3</StuffEffectMultiplierArmor>
                            <ArmorRating_Heat>0.48</ArmorRating_Heat>
                            <Insulation_Cold>35</Insulation_Cold>
                            <Insulation_Heat>18</Insulation_Heat>
                            <EquipDelay>20</EquipDelay>
                            <EnergyShieldRechargeRate>0.05</EnergyShieldRechargeRate>
                            <EnergyShieldEnergyMax>0.7</EnergyShieldEnergyMax>
                        </statBases>
                    </value>
                </li>
                <!-- Packs -->
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[
						defName="AM_BeamcasterPack" or
						defName="AM_VoidlinkPack" or
						defName="AM_CryptoPack"
						]/apparel/bodyPartGroups</xpath>
                    <value>
                        <li>Shoulders</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[
						defName="AM_BeamcasterPack" or
						defName="AM_VoidlinkPack" or
						defName="AM_CryptoPack"
						]/apparel/layers</xpath>
                    <value>
                        <li>Backpack</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[
                        defName="AM_BeamcasterPack" or
                        defName="AM_VoidlinkPack" or
                        defName="AM_CryptoPack"
						]/statBases</xpath>
                    <value>
                        <Bulk>10</Bulk>
                        <WornBulk>2</WornBulk>
                    </value>
                </li>
                <!-- Mech Shield -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="AM_Apparel_ExpandedHeavyShield"]/statBases</xpath>
                    <value>
                        <statBases>
                          <Bulk>5</Bulk>
                          <WornBulk>2.5</WornBulk>
                          <Mass>5</Mass>
                          <Flammability>0</Flammability>
                          <EnergyShieldRechargeRate>0.03</EnergyShieldRechargeRate>
                          <EnergyShieldEnergyMax>5.0</EnergyShieldEnergyMax>
                        </statBases>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>