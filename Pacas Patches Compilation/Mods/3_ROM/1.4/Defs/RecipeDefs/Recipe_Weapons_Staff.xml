        <products>
            <TM_BlazingPowerStaff>1</TM_BlazingPowerStaff>
        </products>
        <skillRequirements>
            <Intellectual>11</Intellectual>
            <Crafting>11</Crafting>
        </skillRequirements>
    </RecipeDef>
    
    <RecipeDef>
