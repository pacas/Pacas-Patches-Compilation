                <value>
                    <bodyPartGroups>
                        <li>Hands</li>
                    </bodyPartGroups>
                </value>
            </li>
            <li Class="XmlExtensions.PatchOperationAdd">
                <xmlDoc>ApparelDoc</xmlDoc>
                <xpath>ApparelDoc/ThingDef[
                defName="TM_Artifact_BracersOfThePacifist" or
                defName="TM_Artifact_BracersOfDefense" or
