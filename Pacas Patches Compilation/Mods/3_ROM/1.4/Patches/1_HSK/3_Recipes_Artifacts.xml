                    <costList>
                        <PureMagicyteBar>75</PureMagicyteBar>
                        <SilverBar>10</SilverBar>
                        <Jade>50</Jade>
                    </costList>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[
                defName="TM_Artifact_Silver" or
