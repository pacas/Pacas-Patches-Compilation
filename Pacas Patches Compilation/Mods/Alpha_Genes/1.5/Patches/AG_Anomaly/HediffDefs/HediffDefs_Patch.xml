<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Anomaly</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="AG_FleshPower"]/stages/li/statOffsets</xpath>
				<value>
					<statOffsets>
						<ArmorRating_Blunt>4.5</ArmorRating_Blunt>
						<ArmorRating_Sharp>3</ArmorRating_Sharp>
					</statOffsets>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="AG_PlaguedClaws_Hands"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>plagued claw</label>
							<capacities>
								<li>AG_PlaguedClaws</li>
							</capacities>
							<power>17</power>
							<cooldownTime>1.3</cooldownTime>
							<armorPenetrationSharp>2</armorPenetrationSharp>
							<armorPenetrationBlunt>3</armorPenetrationBlunt>
						</li>
					</tools>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="AG_GreaterToughspikes"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>greater toughspikes</label>
							<capacities>
								<li>Cut</li>
							</capacities>
							<power>20</power>
							<cooldownTime>1.2</cooldownTime>
							<armorPenetrationSharp>1</armorPenetrationSharp>
							<armorPenetrationBlunt>2</armorPenetrationBlunt>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>greater toughspikes</label>
							<capacities>
								<li>Stab</li>
							</capacities>
							<power>12</power>
							<cooldownTime>1.2</cooldownTime>
							<armorPenetrationBlunt>5</armorPenetrationBlunt>
							<armorPenetrationSharp>10</armorPenetrationSharp>
						</li>
					</tools>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/HediffDef[defName="AG_GreaterFleshWhip"]/comps/li[@Class="HediffCompProperties_VerbGiver"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>greater flesh whip</label>
							<capacities>
								<li>Cut</li>
							</capacities>
							<power>15</power>
							<cooldownTime>0.8</cooldownTime>
							<armorPenetrationSharp>3</armorPenetrationSharp>
							<armorPenetrationBlunt>4.5</armorPenetrationBlunt>
						</li>
					</tools>
				</value>
			</li>

			</operations>
		</match>
	</Operation>

</Patch>