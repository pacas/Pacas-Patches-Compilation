<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/PawnKindDef[@Name="SerenModel"]</xpath>
                <value>
                    <li Class="CombatExtended.LoadoutPropertiesExtension">
                        <primaryMagazineCount>
                            <min>3</min>
                            <max>5</max>
                        </primaryMagazineCount>
                    </li>
                </value>
            </li>
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/PawnKindDef[@Name="SerenRoughModel"]</xpath>
                <value>
                    <li Class="CombatExtended.LoadoutPropertiesExtension">
                        <primaryMagazineCount>
                            <min>5</min>
                            <max>7</max>
                        </primaryMagazineCount>
                    </li>
                </value>
            </li>
            <li Class="XmlExtensions.PatchOperationSafeReplace">
                <xpath>Defs/PawnKindDef[@Name="SerenModel"]/combatPower</xpath>
                <value>
                    <combatPower>60</combatPower>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>