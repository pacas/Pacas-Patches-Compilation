		<ingredients>
            <li>
				<filter>
					<thingDefs>
						<li>PureMagicyteBar</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>LeadBar</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Powder</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
            <li>
				<filter>
					<thingDefs>
						<li>SK_Warpstone</li>
