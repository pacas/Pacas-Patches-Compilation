    </ThingDef>
    
    <RecipeDef ParentName="FlamethrowerAmmoRecipeBase">
		<defName>MakeShell_Skaven_Poison</defName>
		<label>make skaven chemical shell x5</label>
		<description>Craft 5 skaven chemical shells.</description>
		<jobString>Making skaven chemical shells.</jobString>
		<ingredients>
            <li>
				<filter>
					<categories>
						<li>SLDBar</li>
						<li>USLDBar</li>
					</categories>
				</filter>
				<count>50</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Ammo_Flamethrower_SkavenSprayer</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
            <li>
				<filter>
					<thingDefs>
						<li>Powder</li>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
            <li>
				<filter>
					<thingDefs>
						<li>SK_Warpstone</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
        <fixedIngredientFilter>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
			</categories>
			<thingDefs>
				<li>Powder</li>
				<li>FSX</li>
				<li>Ammo_Flamethrower_SkavenSprayer</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Shell_Skaven_Poison>5</Shell_Skaven_Poison>
		</products>
	</RecipeDef>


