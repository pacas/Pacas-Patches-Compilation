<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Simple Slavery Collars</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!--Collars-->
                <li Class="PatchOperationConditional">
                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Nova"]/comps</xpath>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Nova"]</xpath>
                        <value>
                            <comps>
                                <li>
                                    <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                </li>
                            </comps>
                        </value>
                    </nomatch>
                    <match Class="PatchOperationAdd">
                        <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Nova"]/comps</xpath>
                        <value>
                            <li>
                                <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                            </li>
                        </value>
                    </match>
                </li>
                <li Class="PatchOperationConditional">
                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Dova"]/comps</xpath>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Dova"]</xpath>
                        <value>
                            <comps>
                                <li>
                                    <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                </li>
                            </comps>
                        </value>
                    </nomatch>
                    <match Class="PatchOperationAdd">
                        <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Dova"]/comps</xpath>
                        <value>
                            <li>
                                <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                            </li>
                        </value>
                    </match>
                </li>
                <li Class="PatchOperationConditional">
                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Norbal"]/comps</xpath>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Norbal"]</xpath>
                        <value>
                            <comps>
                                <li>
                                    <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                </li>
                            </comps>
                        </value>
                    </nomatch>
                    <match Class="PatchOperationAdd">
                        <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Norbal"]/comps</xpath>
                        <value>
                            <li>
                                <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                            </li>
                        </value>
                    </match>
                </li>
                <li Class="PatchOperationConditional">
                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Orassan"]/comps</xpath>
                    <nomatch Class="PatchOperationAdd">
                        <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Orassan"]</xpath>
                        <value>
                            <comps>
                                <li>
                                    <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                </li>
                            </comps>
                        </value>
                    </nomatch>
                    <match Class="PatchOperationAdd">
                        <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Orassan"]/comps</xpath>
                        <value>
                            <li>
                                <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                            </li>
                        </value>
                    </match>
                </li>
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Revia Race</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationConditional">
                                <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="ReviaRaceAlien"]/comps</xpath>
                                <nomatch Class="PatchOperationAdd">
                                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="ReviaRaceAlien"]</xpath>
                                    <value>
                                        <comps>
                                            <li>
                                                <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                            </li>
                                        </comps>
                                    </value>
                                </nomatch>
                                <match Class="PatchOperationAdd">
                                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="ReviaRaceAlien"]/comps</xpath>
                                    <value>
                                        <li>
                                            <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                        </li>
                                    </value>
                                </match>
                            </li>
                        </operations>
                    </match>
                </li>
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>AsariRace</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationConditional">
                                <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Asari"]/comps</xpath>
                                <nomatch Class="PatchOperationAdd">
                                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Asari"]</xpath>
                                    <value>
                                        <comps>
                                            <li>
                                                <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                            </li>
                                        </comps>
                                    </value>
                                </nomatch>
                                <match Class="PatchOperationAdd">
                                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Asari"]/comps</xpath>
                                    <value>
                                        <li>
                                            <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                        </li>
                                    </value>
                                </match>
                            </li>
                        </operations>
                    </match>
                </li>
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Moyo-From the depth</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationConditional">
                                <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Moyo"]/comps</xpath>
                                <nomatch Class="PatchOperationAdd">
                                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Moyo"]</xpath>
                                    <value>
                                        <comps>
                                            <li>
                                                <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                            </li>
                                        </comps>
                                    </value>
                                </nomatch>
                                <match Class="PatchOperationAdd">
                                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_Moyo"]/comps</xpath>
                                    <value>
                                        <li>
                                            <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                        </li>
                                    </value>
                                </match>
                            </li>
                        </operations>
                    </match>
                </li>
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Moyo-Light in the Abyss</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationConditional">
                                <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_RedMoyo"]/comps</xpath>
                                <nomatch Class="PatchOperationAdd">
                                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_RedMoyo"]</xpath>
                                    <value>
                                        <comps>
                                            <li>
                                                <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                            </li>
                                        </comps>
                                    </value>
                                </nomatch>
                                <match Class="PatchOperationAdd">
                                    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="Alien_RedMoyo"]/comps</xpath>
                                    <value>
                                        <li>
                                            <compClass>SimpleSlaveryCollars.CompSlave</compClass>
                                        </li>
                                    </value>
                                </match>
                            </li>
                        </operations>
                    </match>
                </li>
                <!--Craft-->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[@Name="SCArmorMakeableBase"]/recipeMaker</xpath>
                    <value>
                        <recipeMaker>
                            <workSpeedStat>SmithingSpeed</workSpeedStat>
                            <workSkill>Crafting</workSkill>
                            <effectWorking>Smith</effectWorking>
                            <soundWorking>Recipe_Machining</soundWorking>
                            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
                        </recipeMaker>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[
                    defName="Apparel_SlaveCollar_Explosive" or
                    defName="Apparel_SlaveCollar_Electric"
                    ]/recipeMaker/recipeUsers</xpath>
                    <value>
                        <li>FabricationBench</li>
                        <li>AdvToolBench</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[
                    defName="Apparel_SlaveCollar_Crypto"
                    ]/recipeMaker/recipeUsers</xpath>
                    <value>
                        <li>AdvToolBench</li>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[
                    defName="Apparel_SlaveCollar_Explosive" or
                    defName="Apparel_SlaveCollar_Heavy" or
                    defName="Apparel_SlaveCollar_Crypto" or
                    defName="Apparel_SlaveCollar_Electric"
                    ]/stuffCategories</xpath>
                    <value>
                        <stuffCategories>
                            <li>StrongMetallic</li>
                        </stuffCategories>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="Apparel_SlaveCollar_Electric"]/costList</xpath>
                    <value>
                        <ElectronicComponents>4</ElectronicComponents>
                        <Electronics>1</Electronics>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_SlaveCollar_Crypto"]/costList</xpath>
                    <value>
                        <costList>
                            <ComponentSpacer>2</ComponentSpacer>
                            <ElectronicComponents>5</ElectronicComponents>
                            <Electronics>2</Electronics>
                            <Microchips>1</Microchips>
                        </costList>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_SlaveCollar_Explosive"]/costList</xpath>
                    <value>
                        <costList>
                            <ComponentIndustrial>3</ComponentIndustrial>
                            <ElectronicComponents>2</ElectronicComponents>
                            <Shell_HighExplosive>1</Shell_HighExplosive>
                        </costList>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_SlaveCollar_Electric"]/techLevel</xpath>
                    <value>
                        <techLevel>Industrial</techLevel>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Apparel_SlaveCollar_Crypto"]/techLevel</xpath>
                    <value>
                        <techLevel>Spacer</techLevel>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>