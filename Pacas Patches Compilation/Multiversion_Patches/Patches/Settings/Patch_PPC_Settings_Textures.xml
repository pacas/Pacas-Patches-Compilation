<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="XmlExtensions.OptionalPatch">
                <modId>PPC.Pacas.Settings</modId>
                <key>Updated_Wires_Textures</key>
                <defaultValue>true</defaultValue>
                <caseTrue>
                    <Operation Class="PatchOperationReplace">
                        <xpath>Defs/ThingDef[defName = "HeavyPowerConduit"]/graphicData/texPath</xpath>
                        <value>
                            <texPath>Things/Building/Linked/UpdatedPowerConduitReinforced_Atlas</texPath>
                        </value>
                    </Operation>
                    <Operation Class="PatchOperationReplace">
                        <xpath>Defs/ThingDef[defName = "HeavyPowerConduit"]/uiIconPath</xpath>
                        <value>
                            <uiIconPath>Things/Building/Linked/UpdatedPowerConduitReinforced_MenuIcon</uiIconPath>
                        </value>
                    </Operation>
                    
                    <Operation Class="PatchOperationReplace">
                        <xpath>Defs/ThingDef[defName = "PowerConduit"]/graphicData/texPath</xpath>
                        <value>
                            <texPath>Things/Building/Linked/UpdatedPowerConduit_Atlas</texPath>
                        </value>
                    </Operation>
                    <Operation Class="PatchOperationReplace">
                        <xpath>Defs/ThingDef[defName = "PowerConduit"]/uiIconPath</xpath>
                        <value>
                            <uiIconPath>Things/Building/Linked/UpdatedPowerConduit_MenuIcon</uiIconPath>
                        </value>
                    </Operation>
                    
                    <Operation Class="PatchOperationReplace">
                        <xpath>Defs/ThingDef[defName = "WaterproofConduit"]/graphicData/texPath</xpath>
                        <value>
                            <texPath>Things/Building/Linked/UpdatedWaterproofConduit_Atlas</texPath>
                        </value>
                    </Operation>
                    <Operation Class="PatchOperationReplace">
                        <xpath>Defs/ThingDef[defName = "WaterproofConduit"]/uiIconPath</xpath>
                        <value>
                            <uiIconPath>Things/Building/Linked/UpdatedWaterproofConduit_MenuIcon</uiIconPath>
                        </value>
                    </Operation>
                </caseTrue>
            </li>
        </operations>
    </Operation>
</Patch>
