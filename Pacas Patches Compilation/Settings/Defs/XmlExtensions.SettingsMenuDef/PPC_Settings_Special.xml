<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <XmlExtensions.SettingsMenuDef>
        <defName>PPC_Settings</defName>
        <modId>PPC.Pacas.Settings</modId>
        <label>Pacas Patches Compilation</label>
        <settings>
            <li Class="XmlExtensions.Setting.TabView">
                <tabs>
                    <li>
                        <label>HSK</label>
                        <settings>
                            <li Class="XmlExtensions.Setting.Gap"/>
                            <li Class="XmlExtensions.Setting.Text">
                                <text>HSK Game Changes</text>
                                <tKey>Game_Changes</tKey>
                                <font>Medium</font>
                                <anchor>Middle</anchor>
                            </li>
                            <li Class="XmlExtensions.Setting.GapLine"/>
                            <li Class="XmlExtensions.Setting.Checkbox">
                                <key>Updated_Reinforced_Wire</key>
                                <label>Useful reinforced wire</label>
                                <tKey>Updated_Reinforced_Wire</tKey>
                                <defaultValue>true</defaultValue>
                                <tooltip>Modifies the reinforced wire recipe and its stats</tooltip>
                                <tKeyTip>Updated_Reinforced_Wire_Tooltip</tKeyTip>
                            </li>
                            <li Class="XmlExtensions.Setting.Gap">
                                <spacing>12</spacing>
                            </li>
                            <li Class="XmlExtensions.Setting.Checkbox">
                                <key>More_Movable_Things</key>
                                <label>More Movable Things</label>
                                <tKey>More_Movable_Things</tKey>
                                <defaultValue>true</defaultValue>
                                <tooltip>More variuos buildings now can be minified and moved</tooltip>
                                <tKeyTip>More_Movable_Things_Tooltip</tKeyTip>
                            </li>
                            <li Class="XmlExtensions.Setting.Gap">
                                <spacing>12</spacing>
                            </li>
                            <li Class="XmlExtensions.Setting.Checkbox">
                                <key>Ammo_Multiplier_Active</key>
                                <label>Use Ammo Craft Multiplier?</label>
                                <tKey>Ammo_Multiplier_Active</tKey>
                                <defaultValue>false</defaultValue>
                                <tooltip>When enabled, the amount of ammunition created will be increased by X times</tooltip>
                                <tKeyTip>Ammo_Multiplier_Active_Tooltip</tKeyTip>
                            </li>
                            <li Class="XmlExtensions.Setting.Slider">
                                <key>Ammo_Multiplier</key>
                                <label>Multiplier - {Ammo_Multiplier}</label>
                                <tKey>Ammo_Multiplier</tKey>
                                <defaultValue>1</defaultValue>
                                <min>1</min>
                                <max>10</max>
                                <decimals>0</decimals>
                            </li>
                        </settings>
                    </li>
                    <li>
                        <label>Textures</label>
                        <settings>
                            <li Class="XmlExtensions.Setting.Gap"/>
                            <li Class="XmlExtensions.Setting.Text">
                                <text>Retextures and Visual Fixes</text>
                                <tKey>Texture_Changes</tKey>
                                <font>Medium</font>
                                <anchor>Middle</anchor>
                            </li>
                            <li Class="XmlExtensions.Setting.GapLine"/>
                            <li Class="XmlExtensions.Setting.Checkbox">
                                <key>Updated_Weapons_Textures</key>
                                <label>New textures for some weapons</label>
                                <tKey>Updated_Weapons_Textures</tKey>
                                <defaultValue>true</defaultValue>
                                <tooltip>Now R6 Splitter and R3 Menstruum will have new awesome textures. Disabled if Weapon Modularisation mod is installed.</tooltip>
                                <tKeyTip>Updated_Weapons_Textures_Tooltip</tKeyTip>
                            </li>
                            <li Class="XmlExtensions.Setting.Text">
                                <text>Commited by Raseri</text>
                                <tKey>Commited_Raseri</tKey>
                            </li>
                            <li Class="XmlExtensions.Setting.Gap">
                                <spacing>12</spacing>
                            </li>
                            <li Class="XmlExtensions.Setting.Checkbox">
                                <key>Updated_Wires_Textures</key>
                                <label>New wire textures</label>
                                <tKey>Updated_Wires_Textures</tKey>
                                <defaultValue>true</defaultValue>
                                <tooltip>Now all wires (except invisible) will have new awesome textures</tooltip>
                                <tKeyTip>Updated_Wires_Textures_Tooltip</tKeyTip>
                            </li>
                            <li Class="XmlExtensions.Setting.Text">
                                <text>Based on «Power Conduit Retexture»</text>
                                <tKey>Based_Power</tKey>
                            </li>
                        </settings>
                    </li>
                    <li>
                        <label>DLC</label>
                        <settings>
                            <li Class="XmlExtensions.Setting.Gap"/>
                            <li Class="XmlExtensions.Setting.Text">
                                <text>Various DLC Tweaks</text>
                                <tKey>DLC_Changes</tKey>
                                <font>Medium</font>
                                <anchor>Middle</anchor>
                            </li>
                            <li Class="XmlExtensions.Setting.GapLine"/>
                        </settings>
                    </li>
                </tabs>
            </li>
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.ResetSettings"/>
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>All options require restart to apply</text>
                <tKey>Restart_Required</tKey>
            </li>
        </settings>
    </XmlExtensions.SettingsMenuDef>
</Defs>